<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back"
        android:id="@+id/include" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="电池编号"/>


        <EditText
            android:id="@+id/etBatteryNo"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="45dp"
            android:background="@drawable/shape_border_light_gray_content_white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/mini_space"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_scan_code"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_scan_button" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="电池容量"/>

        <EditText
            android:id="@+id/etBatteryCapacity"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_border_light_gray_content_white"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mini_space"
            android:gravity="left|center"
            android:text="A.H" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tx_remark"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="出库备注"/>

        <EditText
            android:id="@+id/etOutStoreRemark"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/shape_border_light_gray_content_white"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/mini_space"
            android:layout_height="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_submit_next"
            android:paddingLeft="@dimen/normal_space"
            android:paddingRight="@dimen/normal_space"
            android:layout_marginRight="@dimen/mini_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/selector_main_blue_button"
            android:text="提交并下一条"
            android:tag="1"/>

        <Button
            android:id="@+id/btn_submit_exist"
            android:layout_marginLeft="@dimen/mini_space"
            android:paddingLeft="@dimen/normal_space"
            android:paddingRight="@dimen/normal_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/selector_main_blue_button"
            android:text=" 提交并退出 "
            android:tag="2"/>

    </LinearLayout>
    <!--<TextView-->
        <!--android:id="@+id/txRequestResult"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

</LinearLayout>
