<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/white_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/coupon_fare"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="20.00元"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/coupon_fare"
        android:gravity="center|left"
        android:maxLines="1"
        android:text="充值返现优惠券"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_title"
        android:layout_toRightOf="@+id/coupon_fare"
        android:gravity="center|left"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="有效期"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/left_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/coupon_fare"
        android:layout_below="@+id/coupon_time"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="还有多少未使用"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lianjie"
        android:text="查看适用站点"
       android:layout_below="@+id/left_amount"
        android:layout_alignLeft="@+id/coupon_title"
        android:textColor="@color/transparent"
        android:layout_marginTop="1dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优惠券"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:id="@+id/name"
        android:textSize="14sp"
        />
</RelativeLayout>