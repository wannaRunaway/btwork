<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/back"
            android:textColor="@color/text_white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="充电"
            android:textColor="@color/text_white"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <com.dlazaro66.qrcodereaderview.QRCodeReaderView
            android:id="@+id/qrdecoderview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <!--<com.botann.driverclient.qrcode.PointsOverlayView-->
            <!--android:id="@+id/overlayview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:text="请扫描充电桩二维码或者输入充电桩编码"
            />
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#99000000"
            android:checked="false"
            android:padding="16dp"
            android:text="打开/关闭闪光灯"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_certain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/checkbox"
            android:background="@drawable/login_on"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:text="确定"
            android:textSize="22sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_certain"
            android:background="@drawable/et_qrcode_back"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            />
    </RelativeLayout>
</LinearLayout>
</layout>