<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/text_white"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/station_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="吴东路站"
            android:textColor="@android:color/black"
            android:textSize="16dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/station_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.6"
            android:drawableLeft="@drawable/station_address"
            android:gravity="left|center"
            android:maxLines="2"
            android:text="吴东路号吴东路号吴东路号吴东路号吴东路号吴东路号"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/station_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:text="500m"
            android:textColor="@color/text_blue"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/parking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:drawableLeft="@drawable/img_parking"
            android:gravity="left|center"
            android:text="2小时免费停车"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/station_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/station_octime"
            android:gravity="left|center"
            android:maxLines="1"
            android:text="8：00-20：00"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btn_navigation"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:text="导航"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/yunyingshang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:text="运营商"
            android:drawableLeft="@drawable/operator"
            android:gravity="left|center"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            />
        <TextView
            android:text="快充: 30/0"
            android:drawableLeft="@drawable/zhuangzi"
            android:id="@+id/tv_zhuang1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="left|center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />
        <View
            android:layout_width="60dp"
            android:layout_height="26dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            >
            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/money"
                android:gravity="left|center"
                android:text="1.6元"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_price"
                android:text="1.4元"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <TextView
            android:text="慢充: 30/0"
            android:drawableLeft="@drawable/zhuangzi"
            android:id="@+id/tv_zhuang2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="left|center"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="26dp"/>
    </LinearLayout>
</LinearLayout>