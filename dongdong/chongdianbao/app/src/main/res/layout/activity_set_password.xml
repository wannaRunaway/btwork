<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/icon_return"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_close"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"
            android:text="设置密码"
            android:textColor="#333333"
            android:textSize="28sp" />


        <com.btkj.chongdianbao.customizeView.ClearEditText
            android:id="@+id/et_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginTop="60dp"
            android:layout_marginRight="60dp"
            android:drawableRight="@drawable/delete_selector"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/et_back"
            android:textColor="@color/black"
            android:textColorHint="#999999"
            ></com.btkj.chongdianbao.customizeView.ClearEditText>

        <com.btkj.chongdianbao.customizeView.ClearEditText
            android:id="@+id/et_password_certain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password_new"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginTop="39dp"
            android:layout_marginRight="60dp"
            android:drawableRight="@drawable/delete_selector"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@drawable/et_back"
            android:textColor="@color/black"
            android:textColorHint="#999999"
            ></com.btkj.chongdianbao.customizeView.ClearEditText>

        <TextView
            android:id="@+id/img_confrim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password_certain"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/login_out"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </RelativeLayout>
</layout>
