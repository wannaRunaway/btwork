<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background"
        tools:context=".homepage.MainActivity"
        android:id="@+id/content"
        >

        <include
            android:id="@+id/layout_header"
            layout="@layout/layout_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="924dp"
            android:layout_height="117dp"
            android:background="@drawable/img_background_top"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/img_headrice"
                />
            <TextView
                android:id="@+id/tv_ricetoday"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:text="今日米价：8.88 元/斤"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="这是升级之后的安装包"-->
            <!--android:textColor="@color/colorAccent"-->
            <!--android:textSize="20sp"-->
            <!--android:layout_marginTop="100dp"-->
            <!--android:layout_marginLeft="100dp"-->
            <!--/>-->

        <ImageView
            android:id="@+id/img_selfcult"
            android:layout_width="257dp"
            android:layout_height="257dp"
            android:layout_marginLeft="317dp"
            android:layout_marginTop="397dp"
            android:background="@drawable/selfcult_press" />

        <ImageView
            android:id="@+id/img_recharge"
            android:layout_width="257dp"
            android:layout_height="257dp"
            android:layout_alignTop="@+id/img_selfcult"
            android:layout_marginLeft="98dp"
            android:layout_toRightOf="@+id/img_selfcult"
            android:background="@drawable/recharge_press" />

        <ImageView
            android:id="@+id/img_rice_take"
            android:layout_width="257dp"
            android:layout_height="257dp"
            android:layout_alignTop="@+id/img_selfcult"
            android:layout_marginLeft="98dp"
            android:layout_toRightOf="@+id/img_recharge"
            android:background="@drawable/rice_take_press" />

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="257dp"
            android:layout_height="257dp"
            android:layout_alignTop="@+id/img_selfcult"
            android:layout_marginLeft="98dp"
            android:layout_toRightOf="@+id/img_rice_take"
            android:background="@drawable/help_press" />
        />

        <include
            android:id="@+id/layout_bottom"
            layout="@layout/layout_bottomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <include
            android:id="@+id/include_back"
            layout="@layout/layout_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</layout>