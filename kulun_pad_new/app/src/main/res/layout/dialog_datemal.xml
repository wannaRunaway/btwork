<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:text="开始时间:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_starttime_input"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_starttime"
            android:background="@drawable/selector_input" />

        <TextView
            android:id="@+id/tv_stoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_starttime"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="结束时间:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_stoptime_input"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_starttime"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_stoptime"
            android:background="@drawable/selector_input" />

        <TextView
            android:id="@+id/tv_determine"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@color/main_blue"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>