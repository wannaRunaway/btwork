<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:state_pressed="true"-->
        <!--android:drawableTint="@color/light_gray"-->
        <!--android:drawable="@drawable/shape_radius3dp_light_gray_border" />-->

    <item android:state_enabled="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/light_gray" /><!-- 描边，边框宽度、颜色 -->
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <stroke android:width="1dp" android:color="@color/light_gray" /><!-- 描边，边框宽度、颜色 -->
            <solid android:color="@color/so_light_gray"></solid>
        </shape>
    </item>

</selector>