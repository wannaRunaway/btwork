<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/button_back" />

        <ImageView
            android:id="@+id/img_huandian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:src="@drawable/btn_sign_charge"
            />

        <ImageView
            android:id="@+id/img_chongdian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/img_huandian"
            android:src="@drawable/btn_sign_exchange"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_back"
            android:layout_marginTop="40dp"
            android:text="新用户注册"
            android:textColor="@color/black"
            android:layout_alignLeft="@+id/img_huandian"
            android:textSize="25sp" />
    </RelativeLayout>
</layout>