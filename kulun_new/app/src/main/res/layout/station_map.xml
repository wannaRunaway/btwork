<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_list_item"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@color/text_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/station_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="吴东路站"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/station_status"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150px"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="运营中"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="16dp"
            android:textColor="@color/text_white"
            android:background="@drawable/station_status_on_bg"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/station_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:drawableLeft="@drawable/station_address"
            android:text="吴东路号吴东路号吴东路号吴东路号吴东路号吴东路号"
            android:gravity="left|center"
            android:maxLines="2"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/station_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="500m"
            android:gravity="right|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@color/text_blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/station_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:drawableLeft="@drawable/station_phone"
            android:text="15012345678"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/station_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/station_octime"
            android:text="8：00-20：00"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:text="导航"
            android:textSize="14dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:drawableLeft="@drawable/battery"
            android:text="电池库存：有"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/line_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/line_up"
            android:text="排队人数：0"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"/>

    </LinearLayout>

</LinearLayout>