<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/white_back"
        android:layout_centerInParent="true"
        android:padding="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t1"
            android:text="服务条款和隐私政策提示"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t2"
            android:layout_below="@+id/t1"
            android:text="欢迎使用库仑能网"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t3"
            android:layout_below="@+id/t2"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="在您使用库仑能网前，请认真阅读并了解用户协议和隐私政策以了解我们的服务内容和我们在收集和使用您相关个人信息时的处理规则。我们将严格按照用户协议和隐私规则为您提供服务，保护您的个人信息"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t4"
            android:text="《用户协议》"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/t3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t5"
            android:text="《隐私政策》"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toRightOf="@+id/t4"
            android:layout_below="@+id/t3"
            android:layout_marginLeft="40dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t4"
            >
            <TextView
                android:id="@+id/tv_disagree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="不同意"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/pay_back"
                />
            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="同意"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textColor="@color/text_white"
                android:background="@color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>