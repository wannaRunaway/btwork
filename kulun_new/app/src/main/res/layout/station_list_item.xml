<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/text_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_chongdian"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="吴东路站"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/station_status"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="运营中"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@color/text_white"
            android:background="@drawable/station_status_on_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/station_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.6"
            android:drawableLeft="@drawable/station_address"
            android:text="吴东路号吴东路号吴东路号吴东路号吴东路号吴东路号"
            android:gravity="left|center"
            android:maxLines="2"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/station_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="500m"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@color/text_blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/station_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/station_phone"
            android:text="15012345678"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/station_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/station_octime"
            android:text="8：00-20：00"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_navigation"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.8"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:text="导航"
            android:textSize="14dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/line_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/line_up"
            android:text="排队人数：0"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/battery_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:drawableLeft="@drawable/battery"
            android:text="电池库存：有"
            android:gravity="left|center"
            android:maxLines="1"
            android:textSize="14dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_chongdian"
        />
</LinearLayout>