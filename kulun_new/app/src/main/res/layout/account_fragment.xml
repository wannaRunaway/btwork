<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    <com.scwang.smartrefresh.layout.header.ClassicsHeader-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"></com.scwang.smartrefresh.layout.header.ClassicsHeader>-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/text_blue"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    />

                <TextView
                    android:id="@+id/txt_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="我的账户"
                    android:textColor="@color/text_white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/text_white"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/text_blue"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_username_bg"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="我"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/text_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/left_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/shape_leftmoney_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text=""
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />
<!--                    <TextView-->
<!--                        android:id="@+id/tv_mile"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="1dp"-->
<!--                        android:background="@drawable/shape_leftmoney_bg"-->
<!--                        android:gravity="center_vertical"-->
<!--                        android:paddingLeft="6dp"-->
<!--                        android:text=""-->
<!--                        android:textColor="@color/text_white"-->
<!--                        android:textSize="14sp"-->
<!--                        android:visibility="visible"-->
<!--                        />-->
                    <TextView
                        android:id="@+id/chongdian_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/shape_leftmoney_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="6dp"
                        android:text=""
                        android:textColor="@color/text_white"
                        android:textSize="14sp"
                        android:visibility="visible"
                        />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_queueNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="排队人数"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/text_white"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/fm_recharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/tv1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/recharge"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center"
                        android:text="充值"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_below="@+id/tv1"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/coupon" />


                    <TextView
                        android:id="@+id/coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom|center"
                        android:text="优惠券"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/coupon_largeNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img1"
                        android:layout_alignRight="@+id/img1"
                        android:layout_marginRight="-10dp"
                        android:background="@drawable/shape_common_bg2"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_blue"
                        android:textSize="16dp"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/couponNum"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignTop="@+id/img1"
                        android:layout_alignRight="@+id/img1"
                        android:layout_marginRight="-8dp"
                        android:background="@drawable/shape_common_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_blue"
                        android:textSize="16dp"
                        android:visibility="invisible"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/re_chongdian"
                    >
                    <ImageView
                        android:id="@+id/img_chongdian"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img_chongdianzhuang"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_chongdian"
                        android:layout_centerHorizontal="true"
                        android:text="充电"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="bottom|center"
                        android:layout_alignParentBottom="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/message" />

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom|center"
                        android:text="消息通知"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/message_largeNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img2"
                        android:layout_alignRight="@+id/img2"
                        android:layout_marginRight="-10dp"
                        android:background="@drawable/shape_common_bg2"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_blue"
                        android:textSize="16dp"
                        android:visibility="invisible"
                        />

                    <TextView
                        android:id="@+id/messageNum"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignTop="@+id/img2"
                        android:layout_alignRight="@+id/img2"
                        android:layout_marginRight="-8dp"
                        android:background="@drawable/shape_common_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text_blue"
                        android:textSize="16dp"
                        android:visibility="invisible"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/re_lock"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_clock"
                        android:layout_centerInParent="true"
                        android:id="@+id/image"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打卡"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_below="@+id/image"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom|center"
                        />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/qrcode"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/text_carident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_below="@+id/iv"
                    android:layout_centerHorizontal="true"
                    android:text="请选择您的车牌"
                    android:textColor="@color/dark_dark"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/float_coupon"
                    android:layout_alignParentEnd="true"
                    android:padding="20dp"
                    android:id="@+id/img_coupon"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <EditText
                    android:id="@+id/et_platenumsearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/carid_search"
                    android:hint="请输入要搜索的车牌号码"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue_user"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@color/text_white"
                    android:textSize="13sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_white"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>