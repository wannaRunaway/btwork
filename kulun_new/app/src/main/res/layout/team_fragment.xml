<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/team_refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:background="@color/text_white">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="103dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/text_white">

                    <TextView
                        android:id="@+id/chief_name"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:background="@drawable/shape_teamname_bg"
                        android:text="张三三"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:background="@color/text_white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="6dp"
                            android:layout_weight="1"
                            android:gravity="left|bottom"
                            android:text="夜队长"
                            android:maxLines="1"
                            android:textSize="16dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/chief"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:gravity="left|bottom"
                            android:text="队长"
                            android:maxLines="1"
                            android:textSize="16dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/team_qrcode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="left|bottom"
                            android:text="二维码"
                            android:maxLines="1"
                            android:textSize="16dp"
                            android:textColor="@color/text_blue"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="6dp"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="流水"
                            android:maxLines="1"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/yesterday_current"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:gravity="left|center"
                            android:text="500元/9-27"
                            android:maxLines="1"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center"
                            android:text="服务等级"
                            android:maxLines="1"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/server_rank"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="6dp"
                            android:layout_weight="0.7"
                            android:gravity="left|center"
                            android:text="98/A"
                            android:maxLines="1"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="6dp"
                            android:layout_weight="1"
                            android:gravity="left|top"
                            android:text="流水共计"
                            android:maxLines="1"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/total_current"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="left|top"
                            android:text="100000.00"
                            android:maxLines="1"
                            android:textSize="14dp"
                            android:textColor="@android:color/black"
                            android:visibility="invisible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="@drawable/bonus_info_bg3"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/my_bonus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_my_bonus_bg"
                    android:gravity="center"
                    android:text="我的奖金"
                    android:textColor="@drawable/tab_my_bonus_text"
                    android:maxLines="1"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/member_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tab_my_bonus_bg"
                    android:gravity="center"
                    android:text="成员信息"
                    android:textColor="@drawable/tab_my_bonus_text"
                    android:maxLines="1"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/bonus_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_white"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01"
                android:background="@drawable/bonus_info_bg3"
                android:orientation="vertical">
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/month_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10月月度奖金"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/month_bonus_num"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="600元"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_info_bg3"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/month_recruit_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10月招募奖金"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/month_recruit_bonus_num"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="1000元"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_info_bg3"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/month_manage_bonus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10月管理奖金"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/month_manage_bonus_num"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="11000.87元"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_info_bg3"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bonus_info_bg3"
                    android:orientation="vertical">
                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/team_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </FrameLayout>

    </LinearLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>